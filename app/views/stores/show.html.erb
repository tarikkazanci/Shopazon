
<h1> <%= link_to "View Stores", stores_path %> </h1>

<% if @store.user == current_user %>
<h1> <%= link_to "Edit Store", edit_store_path %> </h1>
<% end %>

<br>

<h2> Name: <%= @store.name %> </h2>
<h2> Location: <%= @store.location %> </h2>

<br>

<h1>Products</h1>

<ul>
<% @store.products.each do |product| %>

<li>

<h2> <%= link_to product.name, store_product_path(@store,product)%> </h2>

</li>

<% end %>
</ul>

<% if @store.user == current_user %>
<h1> <%= link_to "Add Product", new_store_product_path(@store) %> </h1>
<% end %>
