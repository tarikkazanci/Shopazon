<%= form_for [@store, @product] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :category %>
  <%= f.text_field :category %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :img_url %>
  <%= f.text_field :img_url %>

  <%= f.submit %>
<% end %>


<%= form_for @product, method: :delete do |f| %>
  <%= f.submit "Delete", class: "delete" %>
<% end %>
