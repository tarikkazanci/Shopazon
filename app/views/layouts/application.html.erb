<!DOCTYPE html>
<html>
  <head>
    <title>SHOPAZON</title>
    <%= csrf_meta_tags %>

    <link href="https://fonts.googleapis.com/css?family=Atma|Cormorant+Upright" rel="stylesheet">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav>
       <ul>
          <li> <%= link_to "Home", '/' %> </li>
          <li> <%= link_to "View Stores", stores_path %> </li>
          <li> <%= link_to "View Products", products_path %> </li>
          <li> <%= link_to "Create Order", new_order_path %> </li>
          <li> <%= link_to "Orders", orders_path %> </li>
          <li> <%= link_to "Profile", user_path %> </li>
       <ul>
    </nav>


    <div class="user">
      <ul>
        <% if !current_user %>
          <li><%= link_to "Sign Up", new_user_registration_path %></li>
          <li><%= link_to "Sign In", new_user_session_path %></li>
        <% else %>
          <li>Welcome!</li>
          <li><%= current_user.firstname %></li>
          <li><%= current_user.lastname %></li> <br>
          <li><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></li>
        <% end %>
      </ul>
    </div>

    <% flash.each do |type, message| %>
      <p class="flash <%= type %>"><%= message %></p>
    <% end %>



    <%= yield %>

  </body>
</html>
